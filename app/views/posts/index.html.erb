<div class="container">
  <div class="filter">
    <%= form_tag posts_path, method: :get do %>

      <div class="row">
        <div class="col-md-2"%>
          <%= label_tag "Price" %>
        </div>

        <div class="col-md-2">
          <%= label_tag :state %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2"%>
          <%= text_field_tag :min_price, params["min_price"], placeholder: "minimum", class: "form-control input-sm" %>
          <%= text_field_tag :max_price, params["max_price"], placeholder: "maximum", class: "form-control input-sm" %>
        </div>
    
        <div class="col-md-1">
          <%= select_tag(:state, options_from_collection_for_select(Location.all, :name, :name, params[:state]), { include_blank: true , class: "form-control"}) %>
        </div>
    
      </div>


      <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>

    </div>

      


    <% end %>
  </div>

  <% if @posts.empty? %>
  <hr>
  <h3>No results found</h3>
  <% else %>



  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Heading</th>
        <th>Price</th>
        <th>State</th>
        <th>Last Updated</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.heading, post %></td>
          <td><%= number_to_currency(post.price, precision: 0) %></td>
          <td><%= post.state %></td>
          <td><%= "#{time_ago_in_words(Time.at(post.timestamp.to_i))} ago" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>

  <br>

  <%= link_to 'New Post', new_post_path %>

</div>
<% end %>
